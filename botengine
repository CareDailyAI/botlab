    http_headers = {"API_KEY": key, "Content-Type": "application/json"}
    r = requests.get(server + "/cloud/developer/stats", params=params, headers=http_headers, proxies=_https_proxy)
    j = json.loads(r.text)
    _check_for_errors(j)
    return j


